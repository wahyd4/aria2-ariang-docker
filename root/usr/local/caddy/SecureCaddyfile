{$DOMAIN} {
  proxy / localhost:8080 {
      transparent
  }

  proxy /jsonrpc localhost:6800 {
    transparent
  }

  gzip
  log stdout
  errors stdout
}

{$DOMAIN}/ui {
  redir / /ui/ 301
}

{$DOMAIN}/ui/ {
  root /usr/local/www/aria2
  timeouts none
  gzip
  log stdout
  errors stdout

  basicauth / {$ARIA2_USER} {$ARIA2_PWD}
}
